{
  "name": "otplib",
  "version": "11.1.0-0",
  "description": "HMAC-based (HOTP) and Time-based (TOTP) One-Time Password library",
  "main": "./index.js",
  "typings": "./index.d.ts",
  "scripts": {
    "build": "echo \"build\"",
    "clean": "rimraf dist coverage docs",
    "lint": "npm run lint:ts",
    "lint:ts": "tsc --noEmit",
    "test": "jest --coverage --runInBand",
    "test:watch": "jest --watch",
    "upload:coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yeojz/otplib.git"
  },
  "keywords": [
    "otp",
    "totp",
    "hotp",
    "one time password",
    "google authenticator",
    "authenticator",
    "authentication",
    "2FA",
    "2 factor",
    "node",
    "browser"
  ],
  "author": "Gerald Yeo <contact@fusedthought.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yeojz/otplib/issues"
  },
  "homepage": "https://yeojz.github.io/otplib",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/crypto-js": "^3.1.43",
    "@types/jest": "^24.0.16",
    "@types/node": "^12.6.9",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-jest": "^24.8.0",
    "base32-decode": "^1.0.0",
    "base32-encode": "^1.1.1",
    "crypto-js": "^3.1.9-1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "thirty-two": "^1.0.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {},
  "jest": {
    "collectCoverageFrom": [
      "packages/**/*.{js,ts}",
      "!**/node_modules/**",
      "!packages/tests-*/*",
      "!packages/otplib-browser/*"
    ],
    "coverageDirectory": "./coverage/",
    "modulePaths": [
      "<rootDir>"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/.*/__mocks__"
    ],
    "roots": [
      "<rootDir>"
    ],
    "resetMocks": true,
    "setupFiles": [],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/packages/tests-data/",
      "/packages/tests-suites/"
    ],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    }
  },
  "repl": [
    {
      "name": "otplib",
      "module": "./dist/otplib/index"
    }
  ]
}
